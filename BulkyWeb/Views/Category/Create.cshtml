@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 >Create Category</h2>
            <hr/>
        </div>
        <div class="m-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control"/>
        </div>
        <div class="m-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control"/>
        </div>

        <div class="row m-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="form-control border">Back to List</a>
            </div>
        </div>
        
    </div>
</form>